<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kolo.gorskih.tica.imagine">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/imagine_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/imagine_icon_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.auth.activity.AuthActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.camera.CameraActivity" />
        <activity android:name=".ui.upload.UploadActivity" />
        <activity android:name=".ui.edit.EditActivity" />
    </application>

</manifest>